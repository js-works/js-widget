{
  "name": "js-widgets",
  "version": "0.4.23",
  "license": "LGPL-3.0",
  "homepage": "https://github.com/js-works/js-widgets",
  "repository": {
    "type": "git",
    "url": "https://github.com/js-works/js-widgets.git"
  },
  "main": "index.js",
  "module": "dist/js-widgets.all.esm.production.js",
  "unpkg": "dist/js-widgets.all.umd.production.js",
  "jsdelivr": "dist/js-widgets.all.umd.production.js",
  "types": "dist/types/modules/all/main/index.d.ts",
  "files": [
    "index.js",
    "core.js",
    "dom.js",
    "hooks.js",
    "html.js",
    "svg.js",
    "util.js",
    "dist"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.3",
    "@types/mocha": "^5.2.6",
    "@types/node": "^11.9.4",
    "babel": "^6.23.0",
    "babel-core": "^6.26.3",
    "babel-plugin-external-helpers": "^6.22.0",
    "babel-preset-es2015": "^6.24.1",
    "bestzip": "^2.1.2",
    "chai": "^4.1.2",
    "cli-watch": "^1.0.7",
    "copyfiles": "^2.0.0",
    "coveralls": "^3.0.2",
    "cross-conf-env": "^1.1.2",
    "cross-env": "^5.2.0",
    "dyo": "0.0.21",
    "js-spec": "^0.1.63",
    "mocha": "^5.1.1",
    "nyc": "^13.3.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "rollup": "^1.1.2",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-eslint": "^5.0.0",
    "rollup-plugin-gzip": "^2.2.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-replace": "^2.1.0",
    "rollup-plugin-serve": "^1.0.1",
    "rollup-plugin-terser": "^4.0.4",
    "rollup-plugin-tslint": "^0.2.2",
    "rollup-plugin-typescript2": "^0.19.2",
    "rollup-plugin-uglify": "^6.0.2",
    "rollup-plugin-uglify-es": "0.0.1",
    "shx": "^0.3.2",
    "ts-loader": "^5.1.1",
    "ts-node": "^8.0.2",
    "typescript": "^3.3.3",
    "ziptool": "^1.0.2"
  },
  "depencencies": {
    "js-spec": "^0.1.61",
    "react": "16.7.0-alpha.0",
    "react-dom": "16.7.0-alpha.0"
  },
  "scripts": {
    "clean": "shx rm -rf ./build ./dist ./coverage",
    "build": "cross-env NODE_OPTIONS=--max_old_space_size=4096 rollup --c rollup.config.js && tsc -d --emitDeclarationOnly --declarationDir dist/types",
    "test": "nyc mocha -r ts-node/register -r source-map-support/register src/modules/**/test/**/*.ts",
    "test-watch": "mocha -w -r ts-node/register -r source-map-support/register src/modules/**/test/**/*.ts",
    "demo": "rollup --c rollup.demo.config.js -w",
    "demo-experimental": "rollup --c rollup.demo.experimental.config.js -w",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "zipsource": "shx rm -rf ./build/source && shx mkdir -p ./build/source && copyfiles -a ./* ./build/source && shx cp -r ./src ./build/source && shx mkdir -p ./dist/source && cd build/source && bestzip ../../dist/source/source.zip . && cd ../..",
    "dist": "npm run clean && npm run test && npm run build && npm run zipsource"
  },
  "dependencies": {},
  "nyc": {
    "temp-directory": "./coverage/.nyc_output",
    "include": [
      "src/modules"
    ],
    "exclude": [],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "all": true
  }
}
